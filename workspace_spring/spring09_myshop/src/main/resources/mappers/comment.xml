<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="comment">
    <insert id="insert" parameterType="kr.co.itwill.comment.CommentDTO">
        INSERT INTO PCOMMENT(PRODUCT_CODE, CNO, CONTENT, WNAME)
        VALUES (#{product_code}, PRODUCT_SEQ.nextval, #{content}, #{wname})
    </insert>

    <select id="list" parameterType="int" resultMap="rs">
        SELECT CNO, CONTENT, WNAME, REGDATE
        FROM PCOMMENT
        WHERE PRODUCT_CODE = #{product_code}
        ORDER BY REGDATE
    </select>

    <resultMap id="rs" type="kr.co.itwill.comment.CommentDTO">
        <result column="cno" property="cno"/>
        <result column="content" property="content"/>
        <result column="wname" property="wname"/>
        <result column="regdate" property="regdate"/>
    </resultMap>
</mapper>